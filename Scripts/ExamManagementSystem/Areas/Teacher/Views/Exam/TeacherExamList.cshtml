@model List<Exam>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sınav /</span> Sınav İşlemleri</h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-3">
            <table class="table table-bordered" id="examTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Sorular</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var exam in Model)
                    {
                        <tr name="@exam.Id">
                            <td>@exam.Id</td>
                            <td>@exam.Name</td>
                            <td>
                                <ul>
                                    @foreach (var question in exam.Questions)
                                    {
                                        <li style="border: 1px solid #ddd; padding: 5px; margin-bottom: 5px;">
                                            @question.Text
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    @foreach (var question in exam.Questions)
                                    {
                                        <li style="border: 1px solid green; padding: 5px; margin-bottom: 5px;">
                                            @question.CorrectAnswer
                                        </li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

