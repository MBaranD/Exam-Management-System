@model List<User>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Öğrenci /</span> Öğrenci İşlemleri</h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-3">
            <table class="table table-bordered" id="userTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim Soyisim</th>
                        <th>Telefon Numarası</th>
                        <th>Email</th>
                        <th>Şifre</th>
                        <th>Rol</th>
                        <th>Aktif Mi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.NameSurname</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@user.Password</td>
                            <td>@user.Role</td>
                            <td>@(user.IsActive ? "Aktif" : "Aktif Değil")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="Student" asp-action="ActiveStudent" asp-route-StudentId="@user.Id"><i class="ti ti-check"></i></a>
                                <a class="btn btn-dark btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="Student" asp-action="PassiveStudent" asp-route-StudentId="@user.Id"><i class="ti ti-ban"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="Student" asp-action="DeleteStudent" asp-route-StudentId="@user.Id"><i class="ti ti-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/userList.js" type="application/ecmascript"></script>
}