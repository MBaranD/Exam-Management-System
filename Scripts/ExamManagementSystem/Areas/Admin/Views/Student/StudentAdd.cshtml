@model User

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Öğrenci İşlemleri /</span> Öğrenci Ekle</h4>
    <form asp-area="Admin" asp-controller="Student" asp-action="StudentAdd" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="NameSurname" class="form-label">Ad Soyad</label>
                <input asp-for="NameSurname" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ad Soyad Giriniz" aria-describedby="defaultFormControlHelp">
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                <input asp-for="PhoneNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ad Soyad Giriniz" aria-describedby="defaultFormControlHelp">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Email Giriniz" aria-describedby="defaultFormControlHelp">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="Şifre Giriniz" aria-describedby="defaultFormControlHelp">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
            </div>
        </div>
    </form>
</div>
